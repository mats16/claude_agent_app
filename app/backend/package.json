{
  "name": "@app/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bash scripts/install-jq.sh && tsc && cp -r preset-skills dist/ && cp -r preset-agents dist/",
    "start": "node dist/server.js",
    "dev": "tsx watch --env-file=../.env server.ts",
    "db:migrate": "tsx --env-file=../.env db/migrate.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:baseline": "tsx --env-file=../.env db/scripts/mark-baseline.ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path ../.gitignore",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\" --ignore-path ../.gitignore"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.70",
    "@app/shared": "*",
    "@fastify/autoload": "^6.1.0",
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^10.0.1",
    "fastify-plugin": "^5.0.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.45.1",
    "fastify": "^4.28.1",
    "gray-matter": "^4.0.3",
    "postgres": "^3.4.7",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.31.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  }
}
